{
  "name": "badaniatypu-theme",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "format": "prettier --write assets/scss/**/*.scss js; stylelint --fix assets/scss/**/*.scss; eslint --fix assets/js/*.js",
    "lint": "run lint:prettier; run lint:stylelint; run lint:eslint",
    "lint:prettier": "prettier --no-error-on-unmatched-pattern --check scss assets/js/*.js",
    "lint:stylelint": "stylelint assets/scss/**/*.scss",
    "lint:eslint": "eslint --no-error-on-unmatched-pattern assets/js/*.js",
    "upgrade": "yarn-upgrade-all"
  },
  "devDependencies": {
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-yml": "^1.5.0",
    "prettier": "^2.8.7",
    "rollup-plugin-multi-input": "^1.4.1",
    "sass": "^1.60.0",
    "stylelint": "^15.4.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^7.0.1",
    "vite": "^4.2.1",
    "vite-plugin-live-reload": "^3.0.2",
    "yarn-upgrade-all": "^0.7.2"
  }
}
